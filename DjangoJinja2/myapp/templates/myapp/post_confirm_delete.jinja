{% extends "myapp/base.jinja" %}

{% block content %}
<div class="row justify-content-md-center">
    <div class="mt-4 col-sm-4 card shadow-lg animated jello">
        <div class="card-body">
            <h2>Delete {{ post.title|e }} ?</h2>
            <hr>
            <p>{{ post.content|e }}...</p>
            <form method="post">
                {% csrf_token %}
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
    </div>
</div>
{% endblock %}
